{
	"extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
	"plugins": ["react"],
	"parser": "babel-eslint",
	"parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "rules": {
        "no-var": "error",
        "comma-dangle": ["error", "never"],
        "no-console": "off",
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "camelcase": ["warn", { "properties": "never" }],
        "react/jsx-uses-vars": 1
    }
}